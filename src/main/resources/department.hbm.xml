<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="Department" table="myScheme.DEPARTMENT">
		<id name="dep_id" type="java.lang.Integer" column="DEP_ID">
			<generator class="native"/>
		</id>
		<property name="dep_name" column="DEP_NAME"/>
		<property name="designation" column="DESIGNATION"/>
		<many-to-one name="Employee" class="Employee" column="emp_id" unique="true" not-null="true" cascade="all"/>
	</class>
</hibernate-mapping>